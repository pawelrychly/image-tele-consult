extends layout

block content
	div(id='images-panel')
		div(class='modal fade', id='delete-image-confirm')
			div(class='modal-dialog')
				div(class='modal-content')
					div(class='modal-header')
						button(type='button', class='close',  data-dismiss='modal', aria-hidden='true')
						h4(class='modal-title') Delete image
					div(class='modal-body')
						p
							Are you sure you want to delete this file?
						div(class='modal-footer')
							button(type='button', class='btn btn-default', data-dismiss='modal') Close
							button(type='button',id='delete-confirm', class='btn btn-primary',data-dismiss='modal') Delete
		div
			form(method=post, enctype='multipart/form-data', role='form', id='image-upload-form')
				span(class="btn btn-default btn-file") Browse
					input(type='file', id='image-select', name='images', multiple)
				div(id='progress-block')
					progress(id='progress-image-upload', max="100", value="0", title="0")
					span(id='selected-image-name') No file selected
					
				button(class="btn  btn-success", id='upload-button', type='submit') 
					span(class="glyphicon glyphicon-upload")
					span() Upload
		div(id='images')
		