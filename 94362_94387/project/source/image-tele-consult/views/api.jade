extends layout

block content
	ul(class="nav nav-tabs", id="list-of-tabs")
		li(class="active")
			a(href="#images-panel", data-toggle="tab") Images
		li()
			a(href="#profile-panel", data-toggle="tab") Profile
		li()
			a(href="#editor-panel", data-toggle="tab") Editor
	div(id='tab-content-area',class='tab-content')
		div(id='editor-panel', class='tab-pane fade')

		div(id='profile-panel', class='tab-pane fade')
			button(type='button',id='delete-account', class='btn btn-danger',data-dismiss='modal',data-toggle="modal", data-target="#delete-account-confirm") Delete your profile
			div(class='modal fade', id='delete-account-confirm')
				div(class='modal-dialog')
					div(class='modal-content')
						div(class='modal-header')
							button(type='button', class='close',  data-dismiss='modal', aria-hidden='true')
							h4(class='modal-title') Delete account
						div(class='modal-body')
							p
								Are you sure you want to delete your profile? This operation can not be undone.
							div(class='modal-footer')
								button(type='button', class='btn btn-default', data-dismiss='modal') Close
								button(type='button',id='delete-account-confirm-button', class='btn btn-danger',data-dismiss='modal') Delete
		div(id='images-panel', class='tab-pane fade active in')
			div(class='modal fade', id='delete-image-confirm')
				div(class='modal-dialog')
					div(class='modal-content')
						div(class='modal-header')
							button(type='button', class='close',  data-dismiss='modal', aria-hidden='true')
							h4(class='modal-title') Delete image
						div(class='modal-body')
							p
								Are you sure you want to delete this file?
							div(class='modal-footer')
								button(type='button', class='btn btn-default', data-dismiss='modal') Close
								button(type='button',id='delete-confirm', class='btn btn-primary',data-dismiss='modal') Delete
			div(class='modal fade', id='select-cooperators')
				div(class='modal-dialog')
					div(class='modal-content')
						div(class='modal-header')
							button(type='button', class='close',  data-dismiss='modal', aria-hidden='true')
							h4(class='modal-title', id='modal-file-name')
						div(class='modal-body')
							div(id='cooperators-wrapper')
								div(id='cooperators-list')
							div(id='add-permission-panel', class='form-horizontal')
								div(class='search-controls')
									input(type='email', id='cooperators-filter-text', class='typeahead', autocomplete="off", placeholder='Email address')
									button(type='button',id='add-permission', class='btn btn-primary') Add permission
								p(class='help-inline', class='search-user-help')
								
							div(class='modal-footer')
								button(type='button', class='btn btn-default', data-dismiss='modal') Close
			div
				form(method=post, enctype='multipart/form-data', role='form', id='image-upload-form')
					span(class="btn btn-default btn-file") Browse
						input(type='file', id='image-select', name='images', multiple)
					div(id='progress-block')
						progress(id='progress-image-upload', max="100", value="0", title="0")
						span(id='selected-image-name') No file selected
						
					button(class="btn  btn-success", id='upload-button', type='submit') 
						span(class="glyphicon glyphicon-upload")
						span() Upload
			div(id='images')
			