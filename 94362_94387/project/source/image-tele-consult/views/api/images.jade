table(class="table table-hover")
	thead
		tr
			td file name
			td size (bytes)
			td owner 
			td
	tbody
	for image in images
		tr
			td= image.name
			td= image.size
			td= image.user
			- if (!image.isforeign)
				td
					button(type="button",data-image=image.name, data-id=image._id.toString(), class="btn btn-success btn-xs edit-image")
						span(class="glyphicon glyphicon-edit") Edit
					button(type="button",data-image=image.name, data-id=image._id.toString(), class="btn btn-primary btn-xs select-cooperators", data-toggle="modal" data-target="#select-cooperators")
						span(class="glyphicon glyphicon-user") Cooperators
					button(type="button", data-id=image._id.toString(), class="btn btn-danger btn-xs remove-image", data-toggle="modal" data-target="#delete-image-confirm")
						span(class="glyphicon glyphicon-trash") Delete
			- else
				td
					button(type="button",data-image=image.name, data-id=image._id.toString(), class="btn btn-success btn-xs edit-image")
						span(class="glyphicon glyphicon-edit") Edit